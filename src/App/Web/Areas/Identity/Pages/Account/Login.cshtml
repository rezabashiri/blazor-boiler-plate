@page "{handler?}"
@model LoginModel
@{
    ViewData["Title"] = "Login user";
}
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}


@using (Html.BeginForm())
{

    <div asp-validation-summary="ModelOnly" class="c-red"></div>

    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-dark text-white" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">

                    <div class="mb-md-5 mt-md-4 pb-5">

                        <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                        <p class="text-white-50 mb-5">Please enter your login and password!</p>

                        <div class="form-outline form-white mb-4">
                            <label class="form-label">Email</label>
                            <input type="email" asp-for="Email" class="form-control form-control-lg"/>
                            <span asp-validation-for="Email" class="c-red"></span>
                        </div>

                        <div class="form-outline form-white mb-4">
                            <label class="form-label" for="typePasswordX">Password</label>
                            <input type="password" asp-for="Password" class="form-control form-control-lg"/>
                            <span asp-validation-for="Password" class="c-red"></span>
                        </div>

                        <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>

                    </div>


                </div>
            </div>
        </div>
    </div>

}
