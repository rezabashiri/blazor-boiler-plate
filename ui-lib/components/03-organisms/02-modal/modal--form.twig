<div class="modal modal--form">
    <div class="modal-dialog">
        <div class="modal-header">
            {% include '@heading--h3' with { headingText: modalHeading } %}
            <i class="icon-cancel"></i>
        </div>
        <div class="modal-body">
            <div class="d-flex align-items-center">
                <label for="minWorkshops" class="inline-label">Min. Workshops</label>
                <input type="text" class="small" name="minWorkshops" placeholder="" />
            </div>
            <div class="d-flex align-items-center">
                <label for="maxWorkshops" class="inline-label">Max. Workshops</label>
                <input type="text" class="small" name="maxWorkshops" placeholder="" />
            </div>
        </div>
        <div class="modal-footer text-right">
            <div class="button-group">
                <button class="button button-secondary">{{ modalSecondaryButtonText }}</button>
                <button class="button">{{ modalButtonText }}</button>
            </div>
        </div>
    </div>
</div>